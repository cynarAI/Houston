# Houston App - Environment Variables Template
# Production Configuration
# WICHTIG: Kopiere diese Datei zu .env und aktualisiere alle Werte f√ºr deine Umgebung!

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=127.0.0.1

# Database Configuration
DATABASE_URL=mysql://houston_user:CHANGE_ME@localhost:3306/houston_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=houston_db
DB_USER=houston_user
DB_PASSWORD=CHANGE_ME

# Application URLs
APP_URL=https://houston.manus.space
API_URL=https://houston.manus.space/api
FRONTEND_URL=https://houston.manus.space

# Logging
LOG_LEVEL=info
LOG_DIR=/var/www/houston.manus.space/logs

# Security - CHANGE THESE VALUES!
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_VALUE
SESSION_SECRET=CHANGE_ME_TO_SECURE_RANDOM_VALUE

# CORS Configuration
CORS_ORIGIN=https://houston.manus.space

# File Upload
UPLOAD_DIR=/var/www/houston.manus.space/uploads
MAX_FILE_SIZE=52428800

# Cache Configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@houston.manus.space

# Stripe Configuration (optional)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Sentry Configuration (optional)
SENTRY_DSN=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=false
